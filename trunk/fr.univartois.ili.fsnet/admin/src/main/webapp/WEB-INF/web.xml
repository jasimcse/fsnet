<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>fr.univartois.ili.fsnet.admin.maquette</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>http://admin.ili.fsnet.com/</taglib-uri>
            <taglib-location>/WEB-INF/tlds/adminbalises.tld</taglib-location>
        </taglib>
    </jsp-config>
    <servlet>
        <description/>
        <display-name>RemoveUser</display-name>
        <servlet-name>RemoveUser</servlet-name>
        <servlet-class>fr.univartois.ili.fsnet.admin.servlets.RemoveUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveUser</servlet-name>
        <url-pattern>/RemoveUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>RemoveInterest</display-name>
        <servlet-name>RemoveInterest</servlet-name>
        <servlet-class>fr.univartois.ili.fsnet.admin.servlets.RemoveInterest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveInterest</servlet-name>
        <url-pattern>/RemoveInterest</url-pattern>
    </servlet-mapping>
    <servlet>
        <description>
        </description>
        <display-name>RecupInfo</display-name>
        <servlet-name>RecupInfo</servlet-name>
        <servlet-class>fr.univartois.ili.fsnet.admin.servlets.RecupInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecupInfo</servlet-name>
        <url-pattern>/RecupInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>SearchMember</display-name>
        <servlet-name>SearchMember</servlet-name>
        <servlet-class>fr.univartois.ili.fsnet.admin.servlets.SearchMember</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchMember</servlet-name>
        <url-pattern>/SearchMember</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>SearchInterest</display-name>
        <servlet-name>SearchInterest</servlet-name>
        <servlet-class>fr.univartois.ili.fsnet.admin.servlets.SearchInterest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchInterest</servlet-name>
        <url-pattern>/SearchInterest</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Character Encoding</filter-name>
        <filter-class>fr.univartois.ili.fsnet.admin.filters.CharsetFilter</filter-class>
    </filter>
    <security-role>
        <role-name>fsnetadmin</role-name>
    </security-role>
    <security-constraint>
        <display-name>whole access</display-name>
        <web-resource-collection>
            <web-resource-name>all content</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>fsnetadmin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>AdminRealm</realm-name>
    </login-config>
    <servlet>
        <description/>
        <display-name>SearchFileConfig</display-name>
        <servlet-name>SearchFileConfig</servlet-name>
        <servlet-class>fr.univartois.ili.fsnet.admin.servlets.SearchFileConfig</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchFileConfig</servlet-name>
        <url-pattern>/do.it</url-pattern>
    </servlet-mapping>
</web-app>
