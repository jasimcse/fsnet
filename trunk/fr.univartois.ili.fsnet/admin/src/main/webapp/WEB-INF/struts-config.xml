<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="TheFormUser"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="nom" type="java.lang.String" />
            <form-property name="prenom" type="java.lang.String" />
            <form-property name="email" type="java.lang.String" />
        </form-bean>
        <form-bean name="TheFormInterest"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="nomInteret" type="java.lang.String" />
        </form-bean>
        <form-bean name="DeleteUserForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="selectedUsers" type="java.lang.Integer[]" />
        </form-bean>
        <form-bean name="TheFormSearch"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="searchtext" type="java.lang.String" />
            <form-property name="selectRecherche" type="java.lang.String" />
        </form-bean>
        <form-bean name="TheFormOptions"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="serveursmtp" type="java.lang.String" />
            <form-property name="hote" type="java.lang.String" />
            <form-property name="motdepasse" type="java.lang.String" />
            <form-property name="adressefsnet" type="java.lang.String" />
            <form-property name="port" type="java.lang.Integer" />
        </form-bean>
    </form-beans>
    <global-forwards>

    </global-forwards>
    <action-mappings>
        <action path="/adduser" type="fr.univartois.ili.fsnet.admin.actions.ActionUser"
                name="TheFormUser" input="/AddUser.jsp" validate="true" scope="request">
            <forward name="success" path="/AddUser.jsp" />
        </action>
        <action path="/DeleteUser" type="fr.univartois.ili.fsnet.admin.actions.DeleteUser"
                name="DeleteUserForm" input="/SearchMember.jsp" validate="true"
                scope="request">
        </action>
        <action path="/DeleteUserFromAddUser" type="fr.univartois.ili.fsnet.admin.actions.DeleteUser"
                name="DeleteUserForm" input="/AddUser.jsp" validate="true"
                scope="request">
        </action>
        <action path="/addinterest"
                type="fr.univartois.ili.fsnet.admin.actions.ActionInterest" name="TheFormInterest"
                input="/AddInterest.jsp" validate="true" scope="request">
            <forward name="continue" path="/AddInterest.jsp" />
        </action>
        <action path="/RemoveInterest"
                type="fr.univartois.ili.fsnet.admin.actions.ActionRemoveInterest"
                scope="request">
            <forward name="success" path="/AddInterest.jsp" />
        </action>
        <action path="/searchMember"
                type="fr.univartois.ili.fsnet.admin.actions.SearchUser" name="TheFormSearch"
                input="/SearchMember.jsp" validate="true" scope="request">
            <forward name="success" path="/SearchMember.jsp" />
        </action>
        <action path="/searchInterest"
                type="fr.univartois.ili.fsnet.admin.actions.SearchInterest" name="TheFormSearch"
                input="/SearchInterest.jsp" validate="true" scope="request">
            <forward name="success" path="/SearchInterest.jsp" />
        </action>
        <action path="/afficherOptions"
                type="fr.univartois.ili.fsnet.admin.actions.ActionDisplayOption"
                scope="request">
            <forward name="success" path="/options.jsp" />
        </action>
        <action path="/lesoptions"
                type="fr.univartois.ili.fsnet.admin.actions.ActionOptions" name="TheFormOptions"
                input="/options.jsp" validate="true" scope="request">
            <forward name="continue" path="/afficherOptions.do" />
        </action>
        <action path="/lesoptionsrequired"
                type="fr.univartois.ili.fsnet.admin.actions.ActionOptions" name="TheFormOptions"
                input="/optionsrequired.jsp" validate="true" scope="request">
            <forward name="continue" path="/options.asp" />
        </action>
    </action-mappings>

    <message-resources parameter="MyApp" null="false" />
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validator.xml" />
    </plug-in>
</struts-config>
