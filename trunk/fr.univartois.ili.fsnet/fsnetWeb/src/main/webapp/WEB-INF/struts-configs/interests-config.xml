<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
    	<form-bean name="CreateInterestForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="interestName" type="java.lang.String" />
        </form-bean>
        <form-bean name="AddInterestForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="interestId" type="java.lang.String" />
		</form-bean>
    </form-beans>
    <global-forwards>

    </global-forwards>
    <action-mappings>
    	<action path="/DisplayInterests" type="fr.univartois.ili.fsnet.actions.ManageInterests"
                input="Interests" scope="request" parameter="display">
            <forward name="success" path="Interests" />
        </action>
        
        <action 
				path="/AddInterest" 
				type="fr.univartois.ili.fsnet.actions.ManageInterests"
				name="AddInterestForm" 
				input="Interests" 
				scope="request" 
				validate="false"
				parameter="add">
			<forward name="success" path="/Interests.do" />
		</action>
		    
		<action 
				path="/Interests" 
				type="fr.univartois.ili.fsnet.actions.ManageInterests"
				input="Interests" 
				scope="request" 
				parameter="display">
			<forward name="success" path="Interests" />
		</action>


    </action-mappings>
</struts-config>
