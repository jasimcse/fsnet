<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean  name="DemandContactForm" 
					type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="entitySelected" type="java.lang.String"/>
		</form-bean>
		<form-bean  name="AcceptContactForm" 
					type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="entityAccepted" type="java.lang.String"/>
		</form-bean>
		<form-bean  name="RefuseContactForm" 
					type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="entityRefused" type="java.lang.String"/>
		</form-bean>
	</form-beans>
	<global-forwards>

	</global-forwards>
	<action-mappings>

		<action path="/Contacts" type="fr.univartois.ili.fsnet.actions.ManageContacts"
			parameter="display">
			<forward name="success" path="Contacts" />
		</action>

		<action path="/AskContact" type="fr.univartois.ili.fsnet.actions.ManageContacts"
			parameter="ask">
			<forward name="success" path="AskContact" />
		</action>

		<action path="/ContactDemand" name="DemandContactForm" type="fr.univartois.ili.fsnet.actions.ManageContacts"
			parameter="askContact">
			<forward name="success" path="/Contacts.do" redirect="true"/>
		</action>
		
		<action path="/AcceptContact" name="AcceptContactForm" type="fr.univartois.ili.fsnet.actions.ManageContacts"
			parameter="accept">
			<forward name="success" path="/Contacts.do" redirect="true"/>
		</action>		

		<action  path="/RefuseContact" name="RefuseContactForm" type="fr.univartois.ili.fsnet.actions.ManageContacts"
			parameter="refuse">
			<forward name="success" path="/Contacts.do" redirect="true"/>
		</action>	

	</action-mappings>

</struts-config>
