<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
	<formset>		
		<form name="/AddInterest">
            <field property="addedInterestId" depends="required,integer">
                <arg key="error.interest.add" />
            </field>
        </form>
        <form name="/RemoveInterest">
            <field property="removedInterestId" depends="required,integer">
                <arg key="error.interest.remove" />
            </field>
        </form>
        <form name="/SearchInterest">
            <field property="searchInterestName" depends="">
                <arg key="error.interest.search" />
            </field>
        </form>
        <form name="/CreateInterest">
            <field property="createdInterestName" depends="required">
                <arg key="error.interest.create" />
            </field>
        </form>
        <form name="/AdvancedSearchInterest">
            <field property="nextPage" depends="required,integer"/>
            <field property="search" depends="required"/>
        </form>
	</formset>
</form-validation>