<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
	<formset>
		<form name="/AddInterest">
            <field property="interestId" depends="required">
                <arg key="error.interest.add" />
            </field>
        </form>
        <form name="/RemoveInterest">
            <field property="interestId" depends="required">
                <arg key="error.interest.remove" />
            </field>
        </form>
        <form name="/SearchInterest">
            <field property="interestName">
                <arg key="error.interest.search" />
            </field>
        </form>
        <form name="/CreateInterest">
            <field property="interestName" depends="required">
                <arg key="error.interest.create" />
            </field>
        </form>
        <form name="/DeleteInterest">
            <field property="interestId" depends="required">
                <arg key="error.interest.create" />
            </field>
        </form>
	</formset>
</form-validation>