<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
        <form-bean name="CreateConsultationForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="consultationTitle" type="java.lang.String" />
            <form-property name="consultationDescription" type="java.lang.String" />
            <form-property name="consultationChoice" type="java.lang.String[]"></form-property>
        </form-bean>
     </form-beans>
	 <action-mappings>
	        <action path="/CreateConsultation"
	        		name="CreateConsultationForm"
	            	type="fr.univartois.ili.fsnet.actions.ManageConsultations"
	            	input="CreateConsultation"
	            	scope="request"
	            	validate="true"
	            	parameter="create">
	            <forward name="success" path="Consultations.do" />
	        </action>
	        <action path="/Consultations"
	        		type="org.apache.struts.actions.ForwardAction"
                	parameter="CreateConsultation"/>
             
	 </action-mappings>
</struts-config>