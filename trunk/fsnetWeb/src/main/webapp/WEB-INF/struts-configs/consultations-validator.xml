<!--			</field>-->
<!--			<field property="maxChoicesVoter" depends="integer" >-->
<!--				<arg key="consultation.maxChoicesVoter"/>-->
<!--			</field>-->
			<field property="closingAtMaxVoters" depends="integer" >
				<arg key="consultation.maxChoicesVoter"/>
			</field>
