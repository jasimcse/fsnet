<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="TheFormUser"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="nom" type="java.lang.String" />
			<form-property name="prenom" type="java.lang.String" />
			<form-property name="email" type="java.lang.String" />
		</form-bean>
		<form-bean name="TheFormInterest"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="nomInteret" type="java.lang.String" />
		</form-bean>		
		<form-bean name="TheFormSearch"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="searchtext" type="java.lang.String" />
		</form-bean>
		<form-bean name="TheFormOptions"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="serveursmtp" type="java.lang.String" />
			<form-property name="hote" type="java.lang.String" />
			<form-property name="motdepasse" type="java.lang.String" />
			<form-property name="adressefsnet" type="java.lang.String" />
			<form-property name="port" type="java.lang.String" />
		</form-bean>
	</form-beans>
	<action-mappings>
		<action path="/adduser" type="fr.univartois.ili.fsnet.admin.actions.ActionUser"
			name="TheFormUser" input="/AddUser.jsp" validate="true" scope="request">
			<forward name="continue" path="/AddUser" />
		</action>
		<action path="/addinterest" type="fr.univartois.ili.fsnet.admin.actions.ActionInterest"
			name="TheFormInterest" input="/AddInterest.jsp" validate="true" scope="request">
			<forward name="continue" path="/AddInterest" />
		</action>
		<action path="/searchmember"
			type="fr.univartois.ili.fsnet.admin.actions.ActionSearch" name="TheFormSearch"
			input="/SearchMember.jsp" validate="true" scope="request">
			<forward name="continue" path="/SearchMember" />
		</action>
		<action path="/searchinterest"
			type="fr.univartois.ili.fsnet.admin.actions.ActionSearch" name="TheFormSearch"
			input="/SearchInterest.jsp" validate="true" scope="request">
			<forward name="continue" path="/SearchInterest" />
			<!-- <forward name="erreur" path="/AddUser.jsp" />-->
		</action>
		<action path="/lesoptions"
			type="fr.univartois.ili.fsnet.admin.actions.ActionOptions" name="TheFormOptions"
			input="/options.jsp" validate="true" scope="request">
			<forward name="continue" path="/CreateFileConfig" />
			<!-- <forward name="erreur" path="/AddUser.jsp" />-->
		</action>
	</action-mappings>

	<message-resources parameter="MyApp" null="false" />
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validator.xml" />
	</plug-in>
</struts-config>
