<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

<include file="struts-default.xml"/>
	
	<package name="interactions-default" extends="struts-default">

		<action name="AddFavorite" class="fr.univartois.ili.fsnet.actions.ManageFavorites"
			method="add">
			<result name="input">/Home.do</result>
		</action>

		<action name="RemoveFavorite" class="fr.univartois.ili.fsnet.actions.ManageFavorites"
			method="remove">
			<result name="input">/Home.do</result>
		</action>

		<action name="FavoriteFragment" class="fr.univartois.ili.fsnet.actions.ManageFavorites"
			method="display">
			<result name="success">/content/interactions/FavoriteFragment.jsp
			</result>
		</action>

		<action name="RemoveInterestOfInteraction"
			class="fr.univartois.ili.fsnet.actions.ManageInteractions" method="removeInterest">

			<result name="success">/content/interactions/FavoriteFragment.jsp
			</result>
		</action>

	</package>
</struts>