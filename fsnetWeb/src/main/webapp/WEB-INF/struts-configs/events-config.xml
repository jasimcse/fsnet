<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="CreateEventForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="eventName" type="java.lang.String" />
            <form-property name="eventDescription" type="java.lang.String" />
            <form-property name="eventBeginDate" type="java.lang.String" />
            <form-property name="eventEndDate" type="java.lang.String" />
            <form-property name="eventAddress" type="java.lang.String" />
            <form-property name="eventCity" type="java.lang.String" />
            <form-property name="selectedInterests" type="java.lang.String[]" />
            <form-property name="eventId" type="java.lang.String"/>
        </form-bean>
        <form-bean  name="DisplayEventForm" 
        			type="org.apache.struts.validator.DynaValidatorActionForm">
        	<form-property name="eventId" type="java.lang.String"/>
        </form-bean>
        <form-bean  name="UpdateEventForm" 
        			type="org.apache.struts.validator.DynaValidatorActionForm">
        <form-property name="eventId" type="java.lang.String"/>
        </form-bean>
        <form-bean  name="DeleteEventForm" 
        			type="org.apache.struts.validator.DynaValidatorActionForm">
        	<form-property name="eventId" type="java.lang.String"/>
        </form-bean>
        <form-bean name="SearchEventForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="searchString" type="java.lang.String" />
        </form-bean>
        <form-bean name="SubscribeEventForm"
        			type="org.apache.struts.validator.DynaValidatorActionForm">
        	<form-property name="eventId" type="java.lang.String"/>			
        </form-bean>
        <form-bean name="UnsubscribeEventForm"
        			type="org.apache.struts.validator.DynaValidatorActionForm">
        	<form-property name="eventId" type="java.lang.String"/>
        </form-bean>
        <form-bean name="CalendarView"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
        </form-bean>
    </form-beans>
    <action-mappings>
        <action path="/CreateEvent"
            	type="fr.univartois.ili.fsnet.actions.ManageEvents"
            	name="CreateEventForm"
            	input="/DisplayCreateEvent.do"
            	scope="request"
            	validate="true"
            	parameter="create">
            <forward name="success" path="/DisplayEvent.do" />
            <forward name="unauthorized" path="/Events.do" />
        </action>

        <action path="/DisplayCreateEvent"
                type="fr.univartois.ili.fsnet.actions.ManageEvents"
                parameter="displayCreateEvent"
                validate="false">
                <forward name="success" path="CreateEvent" />
            	<forward name="unauthorized" path="/Events.do" />
         </action>

        <action path="/Events"
        		name="SearchEventForm"
                type="fr.univartois.ili.fsnet.actions.ManageEvents"
                input="Events"
            	scope="request"
            	validate="false"
                parameter="search" >
            <forward name="success" path="Events" />
        </action>
        <action path="/DisplayEvent"
        		name="DisplayEventForm"
                type="fr.univartois.ili.fsnet.actions.ManageEvents"
                input="Events"
            	scope="request"
            	validate="true"
                parameter="display" >
            <forward name="success" path="DisplayEvent" />
        </action>
        <action path="/DeleteEvent"
        		name="DeleteEventForm"
                type="fr.univartois.ili.fsnet.actions.ManageEvents"
                input="Events"
            	scope="request"
            	validate="true"
                parameter="delete" >
            <forward name="success" path="/Events.do" />
        </action>
        <action path="/SubscribeEvent"
        		name="SubscribeEventForm"
        		type="fr.univartois.ili.fsnet.actions.ManageEvents"
                input="Events"
            	scope="request"
            	validate="true"
            	parameter="subscribe" >
            <forward name="unauthorized" path="/Events.do" />
            <forward name="success" path="/DisplayEvent.do" />
        </action>
        <action path="/UnsubscribeEvent"
        		name="UnsubscribeEventForm"
        		type="fr.univartois.ili.fsnet.actions.ManageEvents"
                input="Events"
            	scope="request"
            	validate="true"
            	parameter="unsubscribe" >
            <forward name="unauthorized" path="/Events.do" />
            <forward name="success" path="/DisplayEvent.do" />
        </action>
        
        <action path="/DisplayUpdateEvent"
	        type="fr.univartois.ili.fsnet.actions.ManageEvents"
	        name="CreateEventForm"
	        validate="false"
	        parameter="displayToModify"
	        input="Events"
	        scope="request">
        
        	<forward name="success" path="UpdateEvent" />
        	<forward name="unauthorized" path="/Events.do" />
        </action>   
        
        <action path="/UpdateEvent"
                type="fr.univartois.ili.fsnet.actions.ManageEvents"
                parameter="modify"
                input="/DisplayUpdateEvent.do"
            	scope="request"
                validate="true"
                name="CreateEventForm">
            <forward name="unauthorized" path="/Events.do" />
            <forward name="success" path="/DisplayEvent.do" />
        </action>
        
        <action path="/Calendar" name="CalendarView" type="fr.univartois.ili.fsnet.actions.Calendar" scope="request" validate="false">
			<forward name="success" path="Calendar" />
			<forward name="unauthorized" path="/Events.do" />
		</action>
        
    </action-mappings>
</struts-config>