<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="SearchMemberForm"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="searchText" type="java.lang.String" />
		</form-bean>
	</form-beans>
	<global-forwards>

	</global-forwards>
	<action-mappings>
		<action 
				path="/SearchMember" 
				type="fr.univartois.ili.fsnet.actions.ManageMembers"
				name="SearchMemberForm" 
				input="Members" 
				scope="request" 
				validate="false"
				parameter="search">
			<forward name="success" path="SearchMembers" />
		</action>
		<action 
				path="/ListMembersOfGroup" 
				type="fr.univartois.ili.fsnet.actions.ManageMembers"
				name="SearchMemberForm" 
				input="Members" 
				scope="request" 
				validate="false"
				parameter="search">
			<forward name="success" path="SearchMembers" />
		</action>
		
		<action path="/ListMembers" 
				type="fr.univartois.ili.fsnet.actions.ManageMembers"
                parameter="search">
			<forward name="success" path="SearchMembers" />
			</action>
	</action-mappings>
</struts-config>
