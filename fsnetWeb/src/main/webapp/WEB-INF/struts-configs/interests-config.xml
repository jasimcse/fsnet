<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd ">

<struts>

	<package name="interests" extends="struts-default">
		<action name="/DisplayInterests" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="display">
			<result name="input">/Interests.do</result>
			<result name="success">Interests</result>
		</action>

		<action name="AddInterest" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="add">
			<result name="input">/Interests.do</result>
			<result name="success">/Interests.do</result>
		</action>

		<action name="RemoveInterest" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="remove">
			<result name="input">/Interests.do</result>
			<result name="success">/Interests.do</result>
		</action>

		<action name="SearchInterest" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="search">
			<result name="input">/Interests.do</result>
			<result name="success">/Interests.do</result>
		</action>

		<action name="CreateInterest" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="create">
			<result name="input">/Interests.do</result>
			<result name="success">/Interests.do</result>
		</action>

		<action name="Interests" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="display">
			<result name="input">/Interests.do</result>
			<result name="success">/Interests.do</result>
		</action>

		<action name="InterestInformations" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="informations">
			<result name="input">/Interests.do</result>
			<result name="success">/InfoInterest.do</result>
		</action>

		<action name="AddInterestFromInterestInformations" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="add">
			<result name="input">/InterestInformations.do</result>
			<result name="success">/InterestInformations.do</result>
		</action>

		<action name="DeleteInterestFromInterestInformations" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="remove">
			<result name="input">/InterestInformations.do</result>
			<result name="success">/InterestInformations.do</result>
		</action>

		<action name="InterestCheckBoxes" class="fr.univartois.ili.fsnet.actions.ManageInterests"
			method="display">
			<result name="success">/content/interests/InterestCheckBoxes.jsp</result>
		</action>
	</package>
	
</struts>
