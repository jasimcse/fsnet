<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
        <form-bean name="CreateConsultationForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="consultationTitle" type="java.lang.String" />
            <form-property name="consultationDescription" type="java.lang.String" />
            <form-property name="consultationChoice" type="java.lang.String[]" />
        </form-bean>
        <form-bean name="VoteConsultationForm" 
        			type="org.apache.struts.validator.DynaValidatorActionForm">
        	<form-property name="voteComment" type="java.lang.String" />
        	<form-property name="voteChoice" type="java.lang.String[]"/>
        	<form-property name="id" type="java.lang.Integer"/>
        </form-bean>
     </form-beans>
	 <action-mappings>
	        <action path="/CreateConsultation"
	        		name="CreateConsultationForm"
	            	type="fr.univartois.ili.fsnet.actions.ManageConsultations"
	            	input="CreateConsultation"
	            	scope="request"
	            	validate="true"
	            	parameter="create">
	            <forward name="error" path="CreateConsultation" />
	            <forward name="success" path="DisplayAConsultation" />
	        </action>
	        <action path="/CreateConsultationMenu"
	        		type="org.apache.struts.actions.ForwardAction"
                	parameter="CreateConsultation"/>
	        <action path="/Consultations"
	        		type="org.apache.struts.actions.ForwardAction"
                	parameter="/DisplayConsultations.do"/>
                	
	        <action path="/DisplayConsultations" 
				type="fr.univartois.ili.fsnet.actions.ManageConsultations" 
				parameter="searchYourConsultations">
				<forward name="success" path="DisplayYourConsultations" />
			</action>
			<action path="/DisplayAConsultation" 
				type="fr.univartois.ili.fsnet.actions.ManageConsultations" 
				parameter="displayAConsultation">
				<forward name="success" path="DisplayAConsultation" />
			</action>
			<action path="/VoteConsultation"
				name="VoteConsultationForm"
				type="fr.univartois.ili.fsnet.actions.ManageConsultations" 
				input="DisplayAConsultation"
	            scope="request"
	            validate="true"
	            parameter="vote">
	            <forward name="success" path="DisplayAConsultation" />
			</action>
			<action path="/DeleteVoteConsultation"
				type="fr.univartois.ili.fsnet.actions.ManageConsultations" 
				input="DisplayAConsultation"
	            scope="request"
	            parameter="deleteVote">
	            <forward name="success" path="DisplayAConsultation" />
			</action>
	 </action-mappings>
</struts-config>