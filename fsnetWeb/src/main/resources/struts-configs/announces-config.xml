<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd ">

<struts>

	<package name="announces" extends="struts-default">
	<result-types>
    	<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
    </result-types>
		<!-- Announces -->
		<action name="Announces" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="search">
			<result name="success" type="tiles">Announces</result>
			<result name="input">Announces</result>
		</action>

		<action name="CreateAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="create">
			<result name="success" type="tiles">/Announces.do</result>
			<result name="failed">/DisplayCreateAnnounce.do</result>
			<result name="unauthorized">/Announces.do</result>
		</action>

		<action name="DisplayCreateAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="displayCreateAnnounce">
			<result name="success" type="tiles">CreateAnnounce</result>
			<result name="unauthorized">/Announces.do</result>
		</action>

		<action name="ModifyAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="modify">
			<result name="success" type="tiles">/Announces.do</result>
			<result name="failed">ModifyAnnounce</result>
		</action>

		<action name="DisplayCreateAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="displayCreateAnnounce">
			<result name="success" type="tiles">CreateAnnounce</result>
			<result name="unauthorized">/Announces.do</result>
		</action>

		<action name="DisplayForModifyAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="displayToModify">
			<result name="success" type="tiles">ModifyAnnounce</result>
			<result name="failed">/Announces.do</result>
		</action>

		<action name="DisplayAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="display">
			<result name="success" type="tiles">DisplayAnnounce</result>
			<result name="failed">/Announces.do</result>
		</action>

		<action name="DeleteAnnounce" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="delete">
			<result name="success" type="tiles">/Announces.do</result>
			<result name="failed">/Announces.do</result>
		</action>

		<action name="DeleteMultiAnnounces" class="fr.univartois.ili.fsnet.actions.ManageAnnounces"
			method="deleteMulti">
			<result name="success" type="tiles">/Announces.do</result>
		</action>
	</package>

</struts>
