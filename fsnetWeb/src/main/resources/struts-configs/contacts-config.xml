<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
"http://struts.apache.org/dtds/struts-2.0.dtd ">
<struts>
	<include file="struts-default.xml" />

	<package name="contacts-default" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="Contact" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="display">
			<result name="success" type="tiles">Contacts</result>
		</action>
		<action name="AskContact" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="ask">
			<result>AskContact</result>
		</action>
		<action name="ContactDemand" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="askContact">
			<result>/Contacts.do</result>
		</action>
		<action name="ContactDemandHome" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="askContact">
			<result>/Home.do</result>
		</action>
		<action name="AcceptContact" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="accept">
			<result>/Contacts.do</result>
		</action>
		<action name="AcceptContactHome" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="accept">
			<result>/Home.do</result>
		</action>
		<action name="RefuseContact" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="refuse">
			<result>/Contacts.do</result>
		</action>

		<action name="RefuseContactHome" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="refuse">
			<result>/Home.do</result>
		</action>

		<action name="DeleteContact" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="delete">
			<result>/Contacts.do</result>
		</action>

		<action name="CancelAskContact" class="fr.univartois.ili.fsnet.actions.ManageContacts"
			method="cancelAsk">
			<result>/Contacts.do</result>
		</action>
	</package>
</struts>
