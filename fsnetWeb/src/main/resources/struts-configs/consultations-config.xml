<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<include file="struts-default.xml" />
	<package name="consultations-default" extends="struts-default">

		<action name="CreateConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations">

			<result name="success">/DisplayAConsultation</result>
			<result name="failed" type="redirect">/CreateConsultation</result>
			<result name="error">/SearchConsultation.do</result>
		</action>


		<action name="DisplayCreateConsultation" class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="CreateConsultation" />

		<action class="fr.univartois.ili.fsnet.actions.ManageConsultations" name="Consultations"
			method="SearchConsultation" />


		<action name="DisplayConsultations"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="searchYourConsultations">
			<result name="success">/DisplayConsultations</result>
		</action>


		<action name="DisplayAConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="displayAConsultation">
			<result name="success" type="redirect">/DisplayAConsultation</result>
			<result name="error">/SearchConsultation.do"</result>
		</action>


		<action name="CloseConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="closeConsultation">
			<result name="success">/DisplayAConsultation</result>
		</action>


		<action name="OpenConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="openConsultation">
			<result name="success">/DisplayAConsultation</result>
		</action>


		<action name="VoteConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="vote">
			<result name="success">/DisplayAConsultation</result>
			<result name="error">/SearchConsultation.do</result>
			<result name="input">/DisplayAConsultation</result>
		</action>


		<action name="DeleteVoteConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="deleteVote">
			<result name="success">/DisplayAConsultation</result>
			<result name="input">/DisplayAConsultation</result>
		</action>


		<action name="DeleteAConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="deleteConsultation">
			<result name="success" type="redirect">/SearchConsultation.do</result>
			<result name="input">/SearchConsultation.do</result>
		</action>


		<action name="SearchConsultation"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="searchConsultation">
			<result name="success" type="redirect">/DisplayConsultations.do</result>
			<result name="input">/DisplayConsultations.do</result>
		</action>


		<action name="AutocompleteOther"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="autocompleteOther">
			<result name="success">/AutocompleteOtherChoice</result>
			<result name="input">/DisplayConsultations.do</result>
		</action>


		<action name="DeleteMultiConsultations"
			class="fr.univartois.ili.fsnet.actions.ManageConsultations" method="deleteMulti">
			<result name="success">/SearchConsultation.do</result>
		</action>
	</package>
</struts>
