<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
    <formset>
        <form name="/CreateTopic">
            <field property="topicSubject" depends="required">
                <arg key="error.topicSubjet" />
            </field>
            <field property="messageDescription" depends="required">
                <arg key="topics.error.messageDescription" />
            </field>
        </form>
    </formset>
    <formset>
        <form name="/CreateTopicMessage">
            <field property="messageDescription" depends="required">
                <arg key="topics.error.messageDescription" />
            </field>
        </form>
    </formset>
    <formset>
        <form name="/ModifyTopicMessage">
            <field property="messageDescription" depends="required">
                <arg key="topics.error.messageDescription" />
            </field>
        </form>
    </formset>
</form-validation>