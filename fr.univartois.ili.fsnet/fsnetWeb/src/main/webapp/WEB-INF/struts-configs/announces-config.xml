<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>

    </form-beans>

    <global-forwards>

    </global-forwards>

    <action-mappings>
        <!-- Announces -->
        <action path="/Announces" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="search">
            <forward name="success" path="Announces" />
        </action>
        <action path="/CreateAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="create">
            <forward name="success" path="CreateModifyAnnounce" />
        </action>
        <action path="/ModifyAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="modify">
            <forward name="success" path="Announce" />
        </action>
        <action path="/DisplayForModifyAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="display">
            <forward name="success" path="CreateModifyAnnounce" />
        </action>
        <action path="/DisplayAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
        parameter="display">
        	<forward name="success" path="DisplayAnnounce"></forward>
        </action>
    </action-mappings>

</struts-config>
