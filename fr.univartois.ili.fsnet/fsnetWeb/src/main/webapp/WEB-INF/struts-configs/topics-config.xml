<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="CreateTopicForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="topicSujet" type="java.lang.String" />
        </form-bean>
        <form-bean name="DeleteTopicForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="topicId" type="java.lang.Integer" />
        </form-bean>
        <form-bean name="ChangeTopicForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="topicId" type="java.lang.Integer" />
            <form-property name="hubNomCommunaute" type="java.lang.String" />
        </form-bean>
        <form-bean name="SearchTopicForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="topicSujetSearch" type="java.lang.String" />
        </form-bean>
    </form-beans>
    <global-forwards>

    </global-forwards>
    <action-mappings>
        <action path="/CreateTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="CreateTopicForm" scope="request" parameter="create">
            <forward name="success" path="/Topic.do" />
        </action>

        <action path="/DeleteTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="DeleteTopicForm" scope="request" parameter="delete">
            <forward name="success" path="/Topic.do" />
        </action>

        <action path="/ChangeTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="ChangeTopicForm" input="Topic" scope="request" validate="false"
                parameter="modify">   
            <forward name="success" path="/Topic.do" />
        </action>

        <action path="/ListTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                input="Topic" scope="request" validate="false"
                parameter="display">
            <forward name="success" path="/Topic.do" />
        </action>

        <action path="/SearchTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="SearchTopicForm" scope="request" parameter="search">
            <forward name="success" path="/Topic.do" />
        </action>

		<action path="/Topic" name="ListTopic" scope="request"
			type="fr.univartois.ili.fsnet.actions.ManageTopic" parameter="display">
			<forward name="success" path="Topic" />
		</action>
    </action-mappings>
</struts-config>
