<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="CreateEventForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="eventName" type="java.lang.String" />
            <form-property name="eventDescription" type="java.lang.String" />
            <form-property name="eventDate" type="java.lang.String" />
        </form-bean>
        <form-bean name="SearchEventForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="searchString" type="java.lang.String" />
        </form-bean>
        <form-bean name="CreateHubForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="hubName" type="java.lang.String" />
        </form-bean>
        <form-bean name="DeleteHubForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="hubId" type="java.lang.String" />
        </form-bean>
        <form-bean name="SearchHubForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="hubName" type="java.lang.String" />
        </form-bean>
        <form-bean name="CreateTopicForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="topicSujet" type="java.lang.String" />
        </form-bean>
        <form-bean name="UpdateProfileForm"
                   type="org.apache.struts.validator.DynaValidatorActionForm">
            <form-property name="name" type="java.lang.String" />
            <form-property name="firstName" type="java.lang.String" />
            <form-property name="adress" type="java.lang.String" />
            <form-property name="dateOfBirth" type="java.lang.String" />
            <form-property name="sexe" type="java.lang.String" />
            <form-property name="pwd" type="java.lang.String" />
            <form-property name="confirmPwd" type="java.lang.String" />
            <form-property name="job" type="java.lang.String" />
            <form-property name="mail" type="java.lang.String" />
            <form-property name="phone" type="java.lang.String" />
        </form-bean>
    </form-beans>
    <global-forwards>

    </global-forwards>
    <action-mappings>
        <action path="/CreateEvent" type="fr.univartois.ili.fsnet.actions.ManageEvents"
                name="CreateEventForm" input="Events" scope="request" validate="false"
                parameter="create">
            <forward name="success" path="Events" />
        </action>
        <action path="/SearchEvent" type="fr.univartois.ili.fsnet.actions.ManageEvents"
                name="SearchEventForm" input="Events" scope="request" validate="false"
                parameter="search">
            <forward name="success" path="Events" />
        </action>

        <action path="/CreateHub" type="fr.univartois.ili.fsnet.actions.ManageHubs"
                name="CreateHubForm" input="Hubs" scope="request" validate="false"
                parameter="create">
            <forward name="success" path="Hubs" />
        </action>

        <action path="/DeleteHub" type="fr.univartois.ili.fsnet.actions.ManageHubs"
                name="DeleteHubForm" input="Hubs" scope="request" validate="false"
                parameter="delete">
            <forward name="success" path="Hubs" />
        </action>

        <action path="/SearchHub" type="fr.univartois.ili.fsnet.actions.ManageHubs"
                name="SearchHubForm" input="Hubs" scope="request" validate="false"
                parameter="search">
            <forward name="success" path="Hubs" />
        </action>

        <action path="/CreateTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="CreateTopic" input="Topic" scope="request" validate="false"
                parameter="create">
            <forward name="success" path="Topic" />
        </action>

        <action path="/DeleteTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="DeleteTopic" input="Topic" scope="request" validate="false"
                parameter="delete">
            <forward name="success" path="Topic" />
        </action>

        <action path="/ChangeTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="ChangeTopic" input="Topic" scope="request" validate="false"
                parameter="modify">
            <forward name="success" path="Topic" />
        </action>

        <action path="/ListTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="ListTopic" input="Topic" scope="request" validate="false"
                parameter="display">
            <forward name="success" path="Topic" />
        </action>

        <action path="/SearchTopic" type="fr.univartois.ili.fsnet.actions.ManageTopic"
                name="SearchTopic" input="Topic" scope="request" validate="false"
                parameter="search">
            <forward name="success" path="Topic" />
        </action>

        <action path="/DisplayProfile" type="fr.univartois.ili.fsnet.actions.ManageProfile"
                parameter="display">
            <forward name="success" path="Profile" />
        </action>
        <action path="/UpdateProfile" type="fr.univartois.ili.fsnet.actions.ManageProfile"
                name="UpdateProfileForm" scope="request" validate="false" parameter="modify">
            <forward name="success" path="/DisplayProfile.do" />
        </action>

        <action path="/DisplayContacts" type="fr.univartois.ili.fsnet.actions.ManageContacts"
                parameter="display">
            <forward name="success" path="Contacts" />
        </action>
        <!-- Announces -->
        <action path="/Announces" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="search">
            <forward name="success" path="Announces" />
        </action>
        <action path="/CreateAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="create">
            <forward name="success" path="CreateModifyAnnounce" />
        </action>
        <action path="/ModifyAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="modify">
            <forward name="success" path="Announce" />
        </action>
        <action path="/DisplayForModifyAnnounce" type="fr.univartois.ili.fsnet.actions.ManageAnnounces"
                parameter="display">
            <forward name="success" path="CreateModifyAnnounce" />
        </action>
        <!-- Announces -->
        <action path="/Events" type="org.apache.struts.actions.ForwardAction"
                parameter="Events" />


        <action path="/Contacts" type="org.apache.struts.actions.ForwardAction"
                parameter="Contacts" />


        <action path="/Interests" type="org.apache.struts.actions.ForwardAction"
                parameter="Interests" />

        <action path="/Hubs" type="org.apache.struts.actions.ForwardAction"
                parameter="Hubs" />

        <action path="/Topic" type="org.apache.struts.actions.ForwardAction"
                parameter="Topic" />


    </action-mappings>

    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

    <message-resources parameter="FSneti18n" null="false" />

    <!--
                ======================= Validator plugin =============================
        -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validator.xml" />
    </plug-in>

    <!--
                ========================= Tiles plugin ===============================
        -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>
</struts-config>
