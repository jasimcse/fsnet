<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="SearchMemberForm"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="searchText" type="java.lang.String" />
		</form-bean>
		<form-bean name="CreateMemberForm"
			type="org.apache.struts.validator.DynaValidatorActionForm">
			<form-property name="name" type="java.lang.String" />
			<form-property name="firstName" type="java.lang.String" />
			<form-property name="mail" type="java.lang.String" />
		</form-bean>
	</form-beans>
	<global-forwards>

	</global-forwards>
	<action-mappings>
		<action path="/SearchMember"
			type="fr.univartois.ili.fsnet.admin.actions.ManageMembers" name="SearchMemberForm"
			input="Members" scope="request" validate="false" parameter="search">
			<forward name="success" path="Members" />
		</action>

		<action path="/CreateMember"
			type="fr.univartois.ili.fsnet.admin.actions.ManageMembers" name="CreateMemberForm"
			input="Members" scope="request" validate="true" parameter="create">
			<forward name="success" path="/Members.do" />
		</action>
		
		<action path="/DeleteMember"
			type="fr.univartois.ili.fsnet.admin.actions.ManageMembers" parameter="delete">
			<forward name="success" path="/Members.do" />
		</action>
		
		<action path="/Members" type="fr.univartois.ili.fsnet.admin.actions.ManageMembers"
			parameter="search">
			<forward name="success" path="Members" />
		</action>
	</action-mappings>
</struts-config>
