<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
    <formset>
        <form name="/CreateCommunity">
            <field property="name" depends="required">
                <arg key="communities.error.name" />
            </field>
            <field property="socialEntityId" depends="required,integer">
                <arg key="communities.error.socialEntityId" />
            </field>
        </form>
         <form name="/SearchCommunity">
            <field property="searchText" depends="required">
                <arg key="error.searchText" />
            </field>
        </form>
    </formset>
</form-validation>
